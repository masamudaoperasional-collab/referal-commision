                    <strong>Tips:</strong> Bagikan kode referral Anda melalui WhatsApp, media sosial, atau pesan teks. Semakin banyak orang yang menggunakan kode Anda, semakin tinggi komisi yang akan Anda dapatkan.
                </div>
            `;
            
            detailModal.classList.add('show');
        }
        
        function showWhatsAppModal() {
            whatsappOption = 'pengajuan';
            whatsappModal.classList.add('show');
        }
        
        function showWhatsAppModalForExtension() {
            whatsappOption = 'perpanjangan';
            whatsappModal.classList.add('show');
        }
        
        function closeWhatsAppModal() {
            whatsappModal.classList.remove('show');
        }
        
        function openWhatsApp(option) {
            whatsappOption = option;
            
            const adminNumber = '6285156973933';
            let message = '';
            
            if (option === 'pengajuan') {
                message = `Halo Admin, saya ${userData?.Nama_Lengkap || currentUser} ingin mengajukan pertanyaan/masalah terkait program referral Masa Muda Commission.`;
            } else if (option === 'perpanjangan') {
                message = `Halo Admin, saya ${userData?.Nama_Lengkap || currentUser} dengan kode referral ${userData?.Kode_Referal || '-'} ingin mengajukan perpanjangan masa aktif kode referral saya karena sudah mencapai milestone tertinggi.`;
            }
            
            const encodedMessage = encodeURIComponent(message);
            window.open(`https://wa.me/${adminNumber}?text=${encodedMessage}`, '_blank');
            
            closeWhatsAppModal();
        }
        
        async function refreshDashboardData() {
            if (!currentUser) return;
            
            const refreshButton = document.querySelector('.refresh-button');
            refreshButton.classList.add('loading');
            
            try {
                // Fetch updated user data
                const response = await fetch(WEBHOOK_USER_DATA);
                if (!response.ok) {
                    throw new Error('Gagal memperbarui data');
                }
                
                const users = await response.json();
                const updatedUser = users.find(u => u.Username === currentUser);
                
                if (updatedUser) {
                    userData = updatedUser;
                    updateDashboard();
                    showNotification('Data berhasil diperbarui');
                } else {
                    throw new Error('Data pengguna tidak ditemukan');
                }
                
            } catch (error) {
                showNotification('Gagal memperbarui data: ' + error.message, 'error');
            } finally {
                refreshButton.classList.remove('loading');
            }
        }
        
        function copyReferralCode() {
            if (!userData) return;
            
            navigator.clipboard.writeText(userData.Kode_Referal)
                .then(() => {
                    showNotification('Kode referral berhasil disalin');
                })
                .catch(() => {
                    showNotification('Gagal menyalin kode referral', 'error');
                });
        }
        
        function copyCaption() {
            if (!userData) return;
            
            const caption = document.getElementById('shareCaption').textContent;
            navigator.clipboard.writeText(caption)
                .then(() => {
                    showNotification('Caption berhasil disalin');
                })
                .catch(() => {
                    showNotification('Gagal menyalin caption', 'error');
                });
        }
        
        // Utility functions
        function formatRupiah(amount) {
            if (typeof amount === 'string') {
                // Extract numeric value from string like "4500 (5% dari 90rb)"
                const numericMatch = amount.match(/(\d+)/);
                if (numericMatch) {
                    amount = parseInt(numericMatch[1]);
                } else {
                    amount = 0;
                }
            }
            
            return new Intl.NumberFormat('id-ID', {
                style: 'currency',
                currency: 'IDR',
                minimumFractionDigits: 0
            }).format(amount);
        }
        
        function formatDate(dateString) {
            if (!dateString) return '-';
            const date = new Date(dateString);
            return date.toLocaleDateString('id-ID', {
                day: 'numeric',
                month: 'long',
                year: 'numeric'
            });
        }
        
        function formatCommission(commissionText) {
            if (typeof commissionText === 'string') {
                // If commission is already formatted, return as is
                if (commissionText.includes('Rp')) {
                    return commissionText;
                }
                // Extract numeric value
                const numericMatch = commissionText.match(/(\d+)/);
                if (numericMatch) {
                    return formatRupiah(parseInt(numericMatch[1]));
                }
            }
            return formatRupiah(commissionText);
        }
        
        // Initialize the app when the page loads
        document.addEventListener('DOMContentLoaded', initApp);
    </script>
</body>
</html>
